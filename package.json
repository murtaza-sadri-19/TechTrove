{
  "name": "tech-trove",
  "version": "1.0.0",
  "description": "Developer portfolio showcasing cutting-edge technology integrations",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "next lint --fix && eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy": "npm run build && firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "postbuild": "next-sitemap",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rimraf .next out dist build",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "next": "^14.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "framer-motion": "^10.16.5",
    "firebase": "^10.7.1",
    "firebase-admin": "^11.11.1",
    "openai": "^4.20.1",
    "@huggingface/inference": "^2.6.4",
    "@pinecone-database/pinecone": "^1.1.2",
    "react-hook-form": "^7.48.2",
    "react-query": "^3.39.3",
    "zustand": "^4.4.7",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.1",
    "prismjs": "^1.29.0",
    "date-fns": "^2.30.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/forms": "^0.5.7",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "jest-environment-jsdom": "^29.7.0",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "lint-staged": "^15.2.0",
    "husky": "^8.0.3",
    "@next/bundle-analyzer": "^14.0.3",
    "next-sitemap": "^4.2.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "portfolio",
    "developer",
    "nextjs",
    "tailwind",
    "firebase",
    "ai",
    "openai",
    "huggingface",
    "pinecone",
    "framer-motion"
  ],
  "author": "Murtaza Sadri",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}